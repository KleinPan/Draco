             d:DataContext="{d:DesignInstance Type=vms:MainWindowVM}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Border>
        <Grid>
            <Grid.Resources>

                <!--<DataTemplate DataType="{x:Type vmg:GatewayConfigViewModel}">
             <local:GatewayConfigUc />
         </DataTemplate>-->
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />


                    <MenuItem Command="{Binding OpenProjectCommand}" Header="打开项目" />
                    <MenuItem Command="{Binding SaveProjectCommand}" Header="保存项目" />
                </MenuItem>
                <MenuItem Command="{Binding TestCmd}" Header="Test" />
            </Menu>

